<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".work.AddWorkActivity"
    android:fitsSystemWindows="true">

    <com.nodream.xskj.commonlib.view.SimpleToolbar
        android:id="@+id/simple_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="?android:attr/actionBarSize"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp">
    </com.nodream.xskj.commonlib.view.SimpleToolbar>

    <EditText
        android:id="@+id/add_work_et"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:gravity="top|left"
        android:hint="请输入任务描述"
        android:background="@null"
        app:layout_constraintTop_toBottomOf="@id/simple_toolbar"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_work_et"/>
    <TextView
        android:id="@+id/add_work_name_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="服务项目："
        app:layout_constraintTop_toBottomOf="@id/add_work_et"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_work_name_t"/>
    <TextView
        android:id="@+id/add_work_contact_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="联系人："
        app:layout_constraintTop_toBottomOf="@id/add_work_name_t"/>
    <TextView
        android:id="@+id/add_work_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:textSize="16sp"
        android:text="XXX"
        android:textColor="@color/text_s_content"
        app:layout_constraintStart_toEndOf="@id/add_work_contact_t"
        app:layout_constraintTop_toBottomOf="@id/add_work_name_t"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_work_contact_t"/>

    <TextView
        android:id="@+id/add_work_phone_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="电话："
        app:layout_constraintTop_toBottomOf="@id/add_work_contact_t"/>
    <TextView
        android:id="@+id/add_work_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:textSize="16sp"
        android:text="XXX"
        android:textColor="@color/text_s_content"
        app:layout_constraintStart_toEndOf="@id/add_work_phone_t"
        app:layout_constraintTop_toBottomOf="@id/add_work_contact_t"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_work_phone_t"/>

    <TextView
        android:id="@+id/add_work_addr_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="地址："
        app:layout_constraintTop_toBottomOf="@id/add_work_phone_t"/>
    <TextView
        android:id="@+id/add_work_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:textSize="16sp"
        android:text="XXX"
        android:textColor="@color/text_s_content"
        app:layout_constraintStart_toEndOf="@id/add_work_addr_t"
        app:layout_constraintTop_toBottomOf="@id/add_work_phone_t"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F4F4F4"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/add_work_addr_t"/>

    <TextView
        android:id="@+id/add_work_people_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:textSize="14sp"
        android:text="执行人："
        app:layout_constraintTop_toBottomOf="@id/add_work_addr_t"/>
    <TextView
        android:id="@+id/add_work_people"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:paddingTop="20dp"
        android:textSize="16sp"
        android:text="XXX"
        android:textColor="@color/text_s_content"
        app:layout_constraintStart_toEndOf="@id/add_work_people_t"
        app:layout_constraintTop_toBottomOf="@id/add_work_addr_t"/>
</android.support.constraint.ConstraintLayout>
